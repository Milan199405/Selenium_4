<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!--    thread-count="3" parallel="tests" verbose="3"  -->

<suite name="Regression Test" verbose="3"  thread-count="3" parallel="tests">

	<test name="Google Test">
		<parameter name="url" value="https://www.google.com/" />
        <parameter name="browser" value="chrome" />
		<classes>
			<class name="com.practice.test.GoogleTest" />
		</classes>

	</test>

	<test name="Orange HRM Test">
		<parameter name="url" value="https://www.orangehrm.com/" />
        <parameter name="browser" value="firefox" />
		<classes>
			<class name="com.practice.test.OrangeHrmTest" />
		</classes>

	</test>

	<test name="Amazon Test">
		<parameter name="url" value="https://www.amazon.in/" />
        <parameter name="browser" value="edge" />
		<classes>
			<class name="com.practice.test.AmazonTest" />
		</classes>

	</test>


</suite>